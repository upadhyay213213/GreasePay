<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ladse.greasepay">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sinup.SignUpActivity" />
        <activity android:name=".home.ui.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".upcomingevents.UpcomingEventsActivity"
            android:label="@string/title_activity_main" />
        <activity android:name=".booking.BookingListActivity"></activity>
        <activity android:name=".restaurantdetails.OutletDetailsScreen"/>
        <activity android:name=".debitcard.CardDetailsActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".MainActivity"/>
    </application>

</manifest>