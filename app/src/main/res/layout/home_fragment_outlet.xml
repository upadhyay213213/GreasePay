<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_fragment_outlet_outletImage"
        android:scaleType="fitXY"
        android:focusable="false"/>

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/home_fragment_outlet_button_fav"
        android:background="@drawable/check_fav"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_padding_10"
        />

    <include layout="@layout/address_distance_layout"/>
</RelativeLayout>