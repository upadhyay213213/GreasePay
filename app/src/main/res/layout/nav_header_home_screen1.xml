<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_drawer_profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_drawer_profileName"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Android Studio"
        android:textSize="22dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nav_drawer_profilePic"
        android:textColor="@color/colorTextBlack"
        android:layout_toEndOf="@+id/nav_drawer_profilePic" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_drawer_editProfile"
        tools:text="@string/edit_profile"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/nav_drawer_profileName"
        android:layout_alignEnd="@+id/nav_drawer_profileName" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_drawer_edit_profile"
        android:layout_alignTop="@+id/nav_drawer_editProfile"
        android:layout_toLeftOf="@+id/nav_drawer_editProfile"
        android:layout_toStartOf="@+id/nav_drawer_editProfile"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
